<Window x:Class="TaskNo2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TaskNo2"
        mc:Ignorable="d"
        Title="Задание №2" Height="400" Width="500">
    <Grid>
        <TextBox Name="InputText" HorizontalAlignment="Center" Margin="0,24,0,0" TextWrapping="Wrap" VerticalAlignment="Top" VerticalContentAlignment="Center" Width="480" Height="39"/>
        <RichTextBox Name="SummaryText" Margin="10,135,10,10">
            <FlowDocument>
                <Paragraph>
                    <Run/>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>
        <Button Name="AddString" Content="Добавить строку" HorizontalAlignment="Left" Margin="10,68,0,0" VerticalAlignment="Top" Height="49" Width="160" Click="AddString_Click"/>
    </Grid>
</Window>
