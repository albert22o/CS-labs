		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:local="clr-namespace:TaskNo6"
		mc:Ignorable="d"
		Title="Задание №6" Height="432" Width="400">
    <Grid>
        <RichTextBox Margin="10,10,10,80">
            <FlowDocument>
                <Paragraph>
                    <Run Name="FileTextContent"/>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>
        <Button Name="LoadButton" Content="Загрузить" HorizontalAlignment="Left" Margin="30,341,0,0" VerticalAlignment="Top" Height="40" Width="150" Click="LoadButton_Click"/>
        <Button Name="SaveButton" Content="Сохранить" HorizontalAlignment="Left" Margin="220,341,0,0" VerticalAlignment="Top" Height="40" Width="150" Click="SaveButton_Click"/>
    </Grid>
</Window>
